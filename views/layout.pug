doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js") // Enlazamos Vue.js desde un CDN
  body
    block content

    script.
      Vue.component('Hola', {
        template: `
          <div>
            <h2>{{ message }}</h2>
            <button @click="changeMessage">Cambiar mensaje</button>
          </div>
        `,
        data() {
          return {
            message: 'Hola'
          }
        },
        methods: {
          changeMessage() {
            this.message = 'Adios'
          }
        }
      });

      new Vue({
        el: '#app'
      });
